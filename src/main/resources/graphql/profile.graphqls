input SignInRequest {
    email: String!
    password: String!
}

input SignUpRequest {
    profile: ProfileInput!
}

input ResetPasswordRequest {
    recoveryToken: String!
    newPassword: String!
}

input ProfileInput {
    id : ID
    email: String!
    profilePassword: String!
    firstName: String!
    lastName: String!
    patronymic: String
    profileRole: Role
}

type Token {
    token: String!
}

type Profile {
    id : ID!
    email: String!
    profilePassword: String!
    firstName: String!
    lastName: String!
    patronymic: String
    profileRole: Role!
}

enum Role {
    USER
    AUTHOR
    ADMIN
}